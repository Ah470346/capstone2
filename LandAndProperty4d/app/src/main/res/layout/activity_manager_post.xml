<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.managerpost.ManagerPostActivityU">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarManagerPostU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3438d7"
        android:theme="@style/toolbar"
        app:title="Quản Lí Bài Đăng"
        app:titleTextColor="#fff"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolBarManagerPostU"
        android:orientation="vertical"
        android:background="#82b6e5"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/iland4dd"></ImageView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerManagerPostU"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="5dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/emptyManagerU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="284dp"
        android:gravity="center"
        android:text="Danh Sách Trống"
        android:textColor="#aeabab"
        android:textStyle="italic"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/recyclerManagerPostU"
        app:layout_constraintTop_toTopOf="@+id/toolBarManagerPostU"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>