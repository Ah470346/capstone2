<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/delete"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"></ImageView>

    <ImageView
        android:id="@+id/imageCheckPost"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/textViewTitleCheckPost"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/imageCheckPost"
        android:text="Đất Cầu Rồng View Đẹp"
        android:fontFamily="@font/baloo"
        android:textSize="18sp"
        android:textColor="#1712f3"/>
    <TextView
        android:id="@+id/textViewAddressCheckPost"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#086f0b"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleCheckPost"
        app:layout_constraintLeft_toRightOf="@id/imageCheckPost"
        android:text="30 Bạch Đằng, Hải Châu , Đà nẵng"/>

    <TextView
        android:id="@+id/textViewPriceCheckPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#086f0b"
        app:layout_constraintTop_toBottomOf="@id/textViewAddressCheckPost"
        app:layout_constraintLeft_toRightOf="@id/imageCheckPost"
        android:text="500.000.000đ/m²"/>

    <TextView
        android:id="@+id/textViewPostDayCheckPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPriceCheckPost"
        app:layout_constraintLeft_toRightOf="@id/imageCheckPost"
        android:textStyle="italic"
        android:text="21/10/2019"/>
</androidx.constraintlayout.widget.ConstraintLayout>