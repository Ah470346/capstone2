<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageNew"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ImageView>

    <TextView
        android:id="@+id/textViewNewTitle"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/baloo"
        android:text="Khu Đất Trống Đẹp"
        android:textColor="#ff0000"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/imageNew"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/postday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Ngày Đăng: "
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNewTitle"
        app:layout_constraintLeft_toRightOf="@id/imageNew"></TextView>

    <TextView
        android:id="@+id/textViewPostNewDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/9/1996"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/textViewNewTitle"
        app:layout_constraintLeft_toRightOf="@id/postday"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>