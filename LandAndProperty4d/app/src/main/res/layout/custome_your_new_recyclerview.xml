<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/imageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:src="@drawable/delete"></ImageView>

    <ImageView
        android:id="@+id/imageYourNew"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/textViewTitleYourNew"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/imageYourNew"
        android:text="Đất Cầu Rồng View Đẹp"
        android:fontFamily="@font/baloo"
        android:textSize="18sp"
        android:textColor="#fe0000"/>


    <TextView
        android:id="@+id/textViewAddressYourNew"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#086f0b"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleYourNew"
        app:layout_constraintLeft_toRightOf="@id/imageYourNew"
        android:text="30 Bạch Đằng, Hải Châu , Đà nẵng"/>

    <TextView
        android:id="@+id/textViewPriceYourNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#086f0b"
        app:layout_constraintTop_toBottomOf="@id/textViewAddressYourNew"
        app:layout_constraintLeft_toRightOf="@id/imageYourNew"
        android:text="500.000.000đ/m²"/>


    <TextView
        android:id="@+id/textViewPostDayYourNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPriceYourNew"
        app:layout_constraintLeft_toRightOf="@id/imageYourNew"
        android:textStyle="italic"
        android:text="21/10/2019"/>

</androidx.constraintlayout.widget.ConstraintLayout>